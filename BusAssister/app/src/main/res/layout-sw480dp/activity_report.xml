<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#92d050"
            android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No of Passengers on-boarded"
                        android:textSize="30dp"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/on_board_passengers_no"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="number"
                        android:textSize="60dp"
                        android:gravity="center"/>

                </LinearLayout>

            <LinearLayout
                android:background="@drawable/roundshpreportchange"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="No of Passengers changed pickup point"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/changed_on_board_passengers_no"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="number"
                    android:textSize="60dp"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff0000"
        android:layout_weight="1"
        android:layout_margin="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No of Passengers didn't onboard"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/failed_on_board_passengers_no"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="number"
            android:textSize="60dp"
            android:gravity="center"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#5b9bd5"
            android:layout_weight="1"
            android:layout_margin="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No of Passengers cancelled"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/cancelled_passengers_no"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="number"
            android:textSize="60dp"
            android:gravity="center"/>
        </LinearLayout>

    <Button
        android:id="@+id/home_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/roundshapebtn1"
        android:text="HOME"
        android:textColor="#FFFF00"
        android:textSize="30dp"
        android:textStyle="bold" />
</LinearLayout>