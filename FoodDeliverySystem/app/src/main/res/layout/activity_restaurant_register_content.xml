<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dev.irsg.fooddeliverysystem.login.RestaurantAdminRegisterActivity"
    tools:showIn="@layout/activity_restaurant_admin_register">

    <TextView
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_email_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_account"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="30"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/register_account"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_phone_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_email"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="30"
        android:inputType="phone"
        android:layout_below="@+id/register_restaurant_email_text"
        android:layout_marginLeft="210sp"
        android:layout_marginTop="15sp"/>

    <TextView
        android:id="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_password_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_phone"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="20"
        android:inputType="textPassword"
        android:layout_below="@+id/register_restaurant_phone_text"
        android:layout_marginLeft="135sp"
        android:layout_marginTop="12sp"/>

    <TextView
        android:id="@+id/register_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_confirm_password_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_confirm_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="20"
        android:inputType="textPassword"
        android:layout_below="@+id/register_restaurant_password_text"
        android:layout_marginLeft="260sp"
        android:layout_marginTop="12sp"/>

    <TextView
        android:id="@+id/register_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_card_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_confirm_password"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="40"
        android:inputType="number"
        android:layout_below="@+id/register_restaurant_confirm_password_text"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/register_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_address_string"
        android:textSize="20sp"
        android:layout_below="@+id/register_card"
        android:layout_marginTop="30sp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/register_restaurant_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minEms="40"
        android:layout_below="@+id/register_restaurant_card_text"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="12sp"/>

    <Button
        android:id="@+id/register_restaurant_submit_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:textStyle="bold"
        android:background="#2E7D32"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        android:id="@+id/restaurant_register_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/register_restaurant_email_text"
        android:layout_alignLeft="@+id/register_restaurant_password_text"
        android:layout_alignStart="@+id/register_restaurant_password_text"
        android:layout_marginLeft="17sp"
        android:layout_marginStart="17sp" />

</RelativeLayout>
